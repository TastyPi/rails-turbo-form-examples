<%= form_with model: post do |form| %>
  <% if post.errors.any? %>
    <div role="alert">
      Could not create post due to the following issues:
      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :discussion_id %>

  <div>
    <%= form.label :text %>
    <div>
      <%= form.text_area :text %>
    </div>
  </div>
  <div>
    <%= form.button %>
  </div>
<% end %>
